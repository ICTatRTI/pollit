= render :partial => 'shared/poll_tabs', :locals => { :poll => @poll, :active_tab => 'summary' }

- if @poll.answers.count == 0
  %h1 No answers have been received yet

- else
  #summary
    - @poll.questions.each do |q|
      %h2= q.title
      %p= q.description
      %br/

      = render :partial => "summary/#{q.kind}", :locals => { :question => q }
