= rgviz :id => "question_#{question.id}", |
  :kind => 'PieChart', |
  :url => query_poll_summary_index_path(@poll.id, question.id), |
  :query => "select response, count(response) #{occurrence_filter} group by response order by response DESC", |
  :options => {:width => 640, :height => 380, :is3D => true, :chartArea => { height: 410, top: 0 }}, |
  :events => { :rgviz_before_draw => 'summaryBeforeDrawChart' }
